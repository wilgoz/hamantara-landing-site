<section id="contact" class="section relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-primary/5">
  </div>

  <div
    class="absolute top-0 right-0 w-96 h-96 bg-primary/20 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-72 h-72 bg-secondary/15 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute top-1/3 left-1/4 w-48 h-48 bg-secondary/15 rounded-full blur-2xl"
  >
  </div>

  <div
    class="absolute inset-0 opacity-5 bg-[url('data:image/svg+xml;base64,')]"
  >
  </div>

  <div class="container-custom relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2
        class="text-3xl md:text-4xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-light"
      >
        Ready to Experience Premium Water Filtration?
      </h2>
      <p class="text-lg text-neutral-800 mb-6">
        Contact us today to discuss how our advanced ultrafiltration membrane
        systems can provide clean, safe water for your home, business, or
        emergency needs.
      </p>
      <div class="inline-flex items-center justify-center mb-6">
        <div
          class="h-[1px] w-16 bg-gradient-to-r from-transparent to-primary/30"
        >
        </div>
        <div class="px-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
            ></path>
          </svg>
        </div>
        <div
          class="h-[1px] w-16 bg-gradient-to-l from-transparent to-primary/30"
        >
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div
        class="bg-white rounded-lg shadow-elegant p-8 border border-primary/10 relative overflow-hidden"
      >
        <h3
          class="text-2xl font-bold text-primary mb-6 relative flex items-center"
        >
          <span
            class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center mr-3"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
              ></path>
            </svg>
          </span>
          Send Us a Message
        </h3>
        <form
          name="contact"
          method="POST"
          action="/thank-you"
          data-netlify="true"
          data-netlify-honeypot="bot-field"
          class="space-y-6"
        >
          <!-- Hidden field for Netlify -->
          <input type="hidden" name="form-name" value="contact" />

          <!-- Additional hidden fields for better email notifications -->
          <input type="hidden" name="submission-time" id="submission-time" />
          <input
            type="hidden"
            name="website"
            value="Hamantara - PT. Handal Prima Nusantara"
          />
          <input type="hidden" name="form-type" value="Contact Inquiry" />

          <!-- Honeypot field for spam protection -->
          <div class="hidden">
            <label
              >Don't fill this out if you're human: <input
                name="bot-field"
              /></label
            >
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-neutral-700 mb-1"
                >Your Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all"
                placeholder="John Doe"
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-neutral-700 mb-1"
                >Email Address</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all"
                placeholder="john@example.com"
              />
            </div>
          </div>

          <div>
            <label
              for="phone"
              class="block text-sm font-medium text-neutral-700 mb-1"
              >Phone Number</label
            >
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              pattern="^\+62\s?\d{8,15}$"
              title="Please enter a valid Indonesian phone number starting with +62"
              class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all"
              placeholder="+62 812 3456 7890"
            />
          </div>

          <div>
            <label
              for="company"
              class="block text-sm font-medium text-neutral-700 mb-1"
              >Company/Organization <span class="text-neutral-500"
                >(Optional)</span
              ></label
            >
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all"
              placeholder="Your company name"
            />
          </div>

          <div>
            <label
              for="subject"
              class="block text-sm font-medium text-neutral-700 mb-1"
              >Subject</label
            >
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all"
              ><option value="" disabled selected>Select a subject</option>
              <option value="TRAYA POE 15000 - Product Inquiry"
                >üè† TRAYA POE 15000 - Home Filtration</option
              >
              <option value="TRAYA POE 12000 - Product Inquiry"
                >üè† TRAYA POE 12000 - Home Filtration</option
              >
              <option value="TRAYA EU 6000 - Product Inquiry"
                >üö® TRAYA EU 6000 - Emergency Unit</option
              >
              <option value="General Product Inquiry"
                >üíß General Product Information</option
              >
              <option value="Request Quote - Home Installation"
                >üí∞ Request Quote - Home Installation</option
              >
              <option value="Request Quote - Emergency/Disaster Unit"
                >üí∞ Request Quote - Emergency Unit</option
              >
              <option value="Technical Support">üîß Technical Support</option>
              <option value="Become a Distributor"
                >ü§ù Become a Distributor</option
              >
              <option value="Installation Support"
                >‚öôÔ∏è Installation Support</option
              >
              <option value="Maintenance/Service"
                >üõ†Ô∏è Maintenance & Service</option
              >
              <option value="Other">üìù Other</option>
            </select>
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-neutral-700 mb-1"
              >Your Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary transition-all"
              placeholder="Please provide details about your inquiry..."
            ></textarea>
          </div>

          <div>
            <button type="submit" class="btn btn-primary w-full"
              >Send Message</button
            >
          </div>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="lg:pl-8">
        <h3 class="text-2xl font-bold text-neutral-900 mb-6">
          Our Contact Information
        </h3>
        <div class="space-y-6 mb-10">
          <div class="flex items-start">
            <div
              class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mr-4 shrink-0 text-primary"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-medium">Address</h4>
              <p class="text-neutral-700 mt-1">
                Setiabudi Atrium Suite 203<br />
                Jakarta Selatan 12920, Indonesia
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div
              class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mr-4 shrink-0 text-primary"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-medium">Email</h4>
              <p class="text-neutral-700 mt-1">sales@hamantara.com</p>
            </div>
          </div>

          <div class="flex items-start">
            <div
              class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mr-4 shrink-0 text-primary"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-medium">Phone</h4>
              <p class="text-neutral-700 mt-1">
                <a
                  href="tel:+628176407888"
                  class="hover:text-primary transition-colors"
                >
                  +62 817 6407 888
                </a>
              </p>
              <!-- <p class="text-neutral-700 mt-1">
                <a
                  href="tel:+6209876543210"
                  class="hover:text-primary transition-colors"
                >
                  +62 987 6543 210
                </a>
              </p> -->
            </div>
          </div>
        </div>

        <h3 class="text-2xl font-bold text-neutral-900 mb-6">Business Hours</h3>
        <table class="w-full">
          <tbody>
            <tr class="border-b border-neutral-300">
              <td class="py-3 font-medium">Monday - Friday:</td>
              <td class="py-3">9:00 AM - 5:00 PM</td>
            </tr>
            <tr class="border-b border-neutral-300">
              <td class="py-3 font-medium">Saturday:</td>
              <td class="py-3">9:00 AM - 2:00 PM</td>
            </tr>
            <tr>
              <td class="py-3 font-medium">Sunday:</td>
              <td class="py-3">Closed</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Set submission timestamp
    const timestampField = document.getElementById("submission-time");
    if (timestampField) {
      (timestampField as HTMLInputElement).value = new Date().toISOString();
    }

    const form = document.querySelector("form[name='contact']");
    const phoneInput = document.querySelector("#phone");

    if (form && phoneInput) {
      // Update timestamp on form submission
      form.addEventListener("submit", function (e) {
        // Update timestamp right before submission
        if (timestampField) {
          (timestampField as HTMLInputElement).value = new Date().toISOString();
        }

        // Validate phone if provided
        const phone = (phoneInput as HTMLInputElement).value.trim();
        if (phone) {
          const regex = /^\+62\s?[\d\s]{8,15}$/;
          if (!regex.test(phone)) {
            e.preventDefault();
            (phoneInput as HTMLInputElement).focus();
            alert(
              "Please enter a valid Indonesian phone number starting with +62"
            );
            return false;
          }
        }
      });
    }
  });
</script>
