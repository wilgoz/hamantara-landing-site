<header class="fixed w-full bg-white/95 backdrop-blur-sm shadow-sm z-50">
    <div class="container-custom py-3">
        <div class="flex justify-between md:items-center">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-1">
                <img src="/logo.svg" alt="Hamantara Logo" class="h-10 w-auto" />
                <div
                    class="flex flex-col lg:flex-row items-start lg:items-center"
                >
                    <span class="font-display text-2xl font-bold text-primary">
                        Hamantara
                    </span>
                    <span
                        class="text-xs lg:text-sm text-neutral-600 lg:ml-2 lg:border-l lg:pl-2 sm:border-neutral-300"
                    >
                        PT. Handal Prima Nusantara
                    </span>
                </div>
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex space-x-6 items-center text-sm">
                <a
                    href="/"
                    class="font-medium text-neutral-800 hover:text-primary transition-colors"
                    >Home</a
                >
                <a
                    href="/#about"
                    class="font-medium text-neutral-800 hover:text-primary transition-colors"
                    >About Us</a
                >
                <a
                    href="/#features"
                    class="font-medium text-neutral-800 hover:text-primary transition-colors"
                    >Why Us</a
                >
                <div class="relative group">
                    <a
                        href="/#products"
                        class="font-medium text-neutral-800 hover:text-primary transition-colors flex items-center"
                        >Products
                        <svg
                            class="w-4 h-4 ml-1"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </a>
                    <div
                        class="absolute top-full left-0 mt-1 w-56 bg-white rounded-lg shadow-elegant border opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
                    >
                        <div class="py-2">
                            <a
                                href="/#products"
                                class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 hover:text-primary"
                            >
                                All Products
                            </a>
                            <div class="border-t border-neutral-100 my-1"></div>
                            <a
                                href="/products/traya-poe-15000"
                                class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 hover:text-primary"
                            >
                                TRAYA POE 15000
                            </a>
                            <a
                                href="/products/traya-poe-12000"
                                class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 hover:text-primary"
                            >
                                TRAYA POE 12000
                            </a>
                            <a
                                href="/products/traya-eu-6000"
                                class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 hover:text-primary"
                            >
                                TRAYA EU 6000
                            </a>
                        </div>
                    </div>
                </div>
                <!-- <a
                    href="/#solutions"
                    class="font-medium text-neutral-800 hover:text-primary transition-colors"
                    >Solutions</a
                > -->
                <a
                    href="/#faq"
                    class="font-medium text-neutral-800 hover:text-primary transition-colors"
                    >FAQ</a
                >
                <a href="/#contact" class="btn btn-primary">Contact Us</a>
            </nav>

            <!-- Mobile menu button -->
            <button id="mobile-menu-button" class="md:hidden flex items-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    class="w-6 h-6"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden bg-white border-t">
        <div class="container-custom py-4 flex flex-col space-y-4">
            <a
                href="/"
                class="font-medium text-neutral-800 hover:text-primary transition-colors"
                >Home</a
            >
            <a
                href="/#about"
                class="font-medium text-neutral-800 hover:text-primary transition-colors"
                >About Us</a
            >
            <a
                href="/#features"
                class="font-medium text-neutral-800 hover:text-primary transition-colors"
                >Why Us</a
            >
            <div>
                <a
                    href="/#products"
                    class="font-medium text-neutral-800 hover:text-primary transition-colors block mb-2"
                    >Products</a
                >
                <div class="ml-4 space-y-2">
                    <a
                        href="/products/traya-poe-15000"
                        class="block text-sm text-neutral-600 hover:text-primary"
                    >
                        TRAYA POE 15000
                    </a>
                    <a
                        href="/products/traya-poe-12000"
                        class="block text-sm text-neutral-600 hover:text-primary"
                    >
                        TRAYA POE 12000
                    </a>
                    <a
                        href="/products/traya-eu-6000"
                        class="block text-sm text-neutral-600 hover:text-primary"
                    >
                        TRAYA EU 6000
                    </a>
                </div>
            </div>
            <!-- <a
                href="/#solutions"
                class="font-medium text-neutral-800 hover:text-primary transition-colors"
                >Solutions</a
            > -->
            <a
                href="/#faq"
                class="font-medium text-neutral-800 hover:text-primary transition-colors"
                >FAQ</a
            >
            <a
                href="/#contact"
                class="btn btn-primary w-full flex justify-center">Contact Us</a
            >
        </div>
    </div>
</header>

<script>
    // Handle mobile menu toggle
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });

    // Close menu when clicking outside
    document.addEventListener("click", (event) => {
        if (
            !mobileMenuButton?.contains(event.target as Node) &&
            !mobileMenu?.contains(event.target as Node) &&
            !mobileMenu?.classList.contains("hidden")
        ) {
            mobileMenu?.classList.add("hidden");
        }
    });
</script>
