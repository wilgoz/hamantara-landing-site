---
import { Image } from "astro:assets";
import trayaPoe15000 from "../assets/products/TRAYA POE 15000.png";
import trayaPoe12000 from "../assets/products/TRAYA POE 12000.png";
import trayaEu6000 from "../assets/products/TRAYA EU 6000.png";

const products = [
  {
    id: 1,
    title: "TRAYA POE 15000",
    description:
      "Premium Point of Entry (POE) ultrafiltration membrane system for whole house water filtration with 15,000 LPD capacity.",
    features: [
      "15,000 LPD capacity",
      "TKDN & SNI certified",
      "Extended filter lifespan",
      "Easy maintenance",
    ],
    image: trayaPoe15000,
    category: "home",
    link: "/products/traya-poe-15000",
  },
  {
    id: 2,
    title: "TRAYA POE 12000",
    description:
      "Reliable Point of Entry (POE) ultrafiltration system designed for residential whole house water treatment with 12,000 LPD capacity.",
    features: [
      "12,000 LPD capacity",
      "TKDN & SNI certified",
      "Compact residential design",
      "Easy maintenance",
    ],
    image: trayaPoe12000,
    category: "home",
    link: "/products/traya-poe-12000",
  },
  {
    id: 3,
    title: "TRAYA EU 6000",
    description:
      "Emergency Unit (EU) ultrafiltration system designed for disaster relief, emergency situations, and portable water treatment with 6,000 LPD capacity.",
    features: [
      "6,000 LPD capacity",
      "TKDN & SNI certified",
      "Portable design",
      "No electricity required",
    ],
    image: trayaEu6000,
    category: "emergency",
    link: "/products/traya-eu-6000",
  },
];
---

<section id="products" class="section">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2
        class="text-3xl md:text-4xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-light"
      >
        Our Premium Products
      </h2>
      <p class="text-lg text-neutral-800">
        Explore our complete range of TRAYA ultrafiltration systems - from Point
        of Entry (POE) solutions for residential use to Emergency Units (EU) for
        disaster relief and remote applications.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        products.map((product) => (
          <a href={product.link} class="block">
            <div class="bg-white rounded-lg overflow-hidden shadow-card hover:shadow-elegant transition-all duration-300 group cursor-pointer">
              <div class="bg-neutral-100 w-full h-64 flex items-center justify-center relative overflow-hidden">
                <Image
                  src={product.image}
                  alt={product.title}
                  class="w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-primary/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
                  <div class="p-6 text-white">
                    <h4 class="font-bold">{product.title}</h4>
                    <p class="opacity-90">Click to explore</p>
                  </div>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-neutral-900 mb-3">
                  {product.title}
                </h3>
                <p class="text-neutral-700 mb-4">{product.description}</p>

                <ul class="space-y-2 mb-6">
                  {product.features.map((feature) => (
                    <li class="flex items-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 text-secondary mr-2"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>

                <div class="flex justify-between items-center">
                  <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">
                    {product.category === "home"
                      ? "POE Systems"
                      : "Emergency Units"}
                  </span>
                  <span class="text-primary font-medium flex items-center">
                    Learn More
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5 ml-1"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-16 text-center">
      <a href="#contact" class="btn btn-primary">
        Request Product Information
      </a>
    </div>
  </div>
</section>
