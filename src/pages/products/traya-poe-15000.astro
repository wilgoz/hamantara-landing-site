---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="TRAYA POE 15000 - Home Water Filtration System">
  <Header slot="header" />

  <div class="pt-16">
    <!-- Hero Section -->
    <section
      class="bg-gradient-to-br from-primary-dark via-primary to-primary-light py-16"
    >
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="flex items-center mb-4">
              <span
                class="bg-secondary text-white px-3 py-1 rounded-full text-sm font-medium mr-4"
                >POE Series</span
              >
              <span
                class="bg-white/20 text-white px-3 py-1 rounded-full text-sm"
                >Home Use</span
              >
            </div>
            <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">
              TRAYA POE 15000
            </h1>
            <p class="text-xl text-white/90 mb-6">
              Premium Ultra Filtration (UF) Membrane Water Filtration for Home &
              Kitchen
            </p>
            <div class="flex items-center space-x-6 mb-8">
              <div class="text-center">
                <div class="text-2xl font-bold text-white">600</div>
                <div class="text-white/80 text-sm">Liter/Hour</div>
              </div>
              <div class="w-px h-12 bg-white/30"></div>
              <div class="text-center">
                <div class="text-2xl font-bold text-white">140</div>
                <div class="text-white/80 text-sm">cm Height</div>
              </div>
              <div class="w-px h-12 bg-white/30"></div>
              <div class="text-center">
                <div class="text-2xl font-bold text-white">8/pc</div>
                <div class="text-white/80 text-sm">cm Diameter</div>
              </div>
            </div>
            <a
              href="/#contact"
              class="btn bg-white text-primary hover:bg-neutral-50"
            >
              Get Quote
            </a>
          </div>
          <div class="flex justify-center">
            <img
              src="/products/TRAYA POE 15000.png"
              alt="TRAYA POE 15000 Water Filtration System"
              class="max-w-md w-full h-auto"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Product Features -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Key Features -->
          <div>
            <h2 class="text-3xl font-bold text-neutral-900 mb-8">
              Key Features
            </h2>
            <div class="space-y-4">
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Premium Ultra Filtration (UF) Membrane
                  </h3>
                  <p class="text-neutral-600">
                    Advanced filtration technology for superior water quality
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    High Quality Water for Whole Family
                  </h3>
                  <p class="text-neutral-600">Complete home water solution</p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Strong & Reliable PVDF Membrane
                  </h3>
                  <p class="text-neutral-600">
                    Durable and long-lasting filtration media
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Point of Entry (POE) System
                  </h3>
                  <p class="text-neutral-600">
                    No sand and carbon filtering required
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Filters 99.9999% Bacteria & Dirt
                  </h3>
                  <p class="text-neutral-600">
                    Superior filtration performance
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Without Pump & Backwash Facility
                  </h3>
                  <p class="text-neutral-600">Low maintenance operation</p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Long Filter Life
                  </h3>
                  <p class="text-neutral-600">
                    Filter media last up to 10 years without replacement
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    5-Year Warranty
                  </h3>
                  <p class="text-neutral-600">
                    Comprehensive warranty coverage
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Technical Specifications -->
          <div>
            <h2 class="text-3xl font-bold text-neutral-900 mb-8">
              Technical Specifications
            </h2>
            <div class="bg-neutral-50 rounded-lg p-6">
              <div class="space-y-4">
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600">Material</span>
                  <span class="text-neutral-900">Hybrid Polymer PVDF</span>
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600"
                    >Membrane Housing</span
                  >
                  <span class="text-neutral-900"
                    >Stainless Steel (SUS 316 PRESSURISED)</span
                  >
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600">Height</span>
                  <span class="text-neutral-900">Approximately 140 cm</span>
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600"
                    >Diameter Bundle</span
                  >
                  <span class="text-neutral-900"
                    >Approximately 8 cm x 3 pcs</span
                  >
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600">Surface Area</span>
                  <span class="text-neutral-900">16 M2</span>
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600"
                    >Port Connection</span
                  >
                  <span class="text-neutral-900">1/2" Pipe Thread</span>
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600">Pore Size</span>
                  <span class="text-neutral-900">0.02 micron</span>
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600"
                    >Maximum Pressure</span
                  >
                  <span class="text-neutral-900">4 bar</span>
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600">Flow Rate</span>
                  <span class="text-neutral-900">0.01 micron</span>
                </div>
                <div
                  class="flex justify-between border-b border-neutral-200 pb-2"
                >
                  <span class="font-medium text-neutral-600">Equipment</span>
                  <span class="text-neutral-900"
                    >Valve, Thread, Way & Pressure Meter</span
                  >
                </div>
                <div class="flex justify-between">
                  <span class="font-medium text-neutral-600">Water Source</span>
                  <span class="text-neutral-900">Air Tanah / PDAM</span>
                </div>
              </div>
            </div>

            <!-- Certifications -->
            <div class="mt-8">
              <h3 class="text-xl font-bold text-neutral-900 mb-4">
                Certifications
              </h3>
              <div class="flex space-x-4">
                <div
                  class="bg-white border border-neutral-200 rounded-lg p-4 text-center"
                >
                  <div class="font-bold text-neutral-900">SNI</div>
                  <div class="text-sm text-neutral-600">Certified</div>
                </div>
                <div
                  class="bg-white border border-neutral-200 rounded-lg p-4 text-center"
                >
                  <div class="font-bold text-neutral-900">TKDN</div>
                  <div class="text-sm text-neutral-600">High Rating</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-primary-dark">
      <div class="container-custom text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Ready to Experience Clean Water?
        </h2>
        <p class="text-white/90 mb-8 max-w-2xl mx-auto">
          Contact us today for a consultation and quote for the TRAYA POE 15000
          system.
        </p>
        <a
          href="/#contact"
          class="btn bg-secondary text-white hover:bg-secondary-dark"
        >
          Get Started
        </a>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>
