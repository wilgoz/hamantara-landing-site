---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { Image } from "astro:assets";
import trayaEu6000Image from "../../assets/products/TRAYA EU 6000.png";

// SEO Metadata
const title = "TRAYA EU 6000-M - Emergency Disaster Water Filtration Unit";
const description = "The TRAYA EU 6000 is a portable 6,000 LPD Emergency Unit (EU) ultrafiltration system designed for disaster relief, emergency situations, and remote areas.";
const keywords = "TRAYA EU 6000, emergency water filter, disaster relief, portable water filtration, ultrafiltration membrane, 6000 LPD, emergency water, no electricity";
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
>
  <Header slot="header" />

  <div class="pt-16">
    <!-- Hero Section -->
    <section
      class="bg-gradient-to-br from-red-900 via-red-800 to-red-700 py-16"
    >
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="flex items-center mb-4">
              <span
                class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-medium mr-4"
                >EU Series</span
              >
              <span
                class="bg-white/20 text-white px-3 py-1 rounded-full text-sm"
                >Emergency Unit</span
              >
            </div>
            <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">
              TRAYA EU 6000-M
            </h1>
            <p class="text-xl text-white/90 mb-6">
              Emergency Disaster Unit - Ultra Filtration (UF) Membrane Water
              Filtration for Emergency Usage
            </p>
            <div class="flex items-center space-x-6 mb-8">
              <div class="text-center">
                <div class="text-2xl font-bold text-white">6,000</div>
                <div class="text-white/80 text-sm">Liter/Day</div>
              </div>
              <div class="w-px h-12 bg-white/30"></div>
              <div class="text-center">
                <div class="text-2xl font-bold text-white">150</div>
                <div class="text-white/80 text-sm">cm Height</div>
              </div>
              <div class="w-px h-12 bg-white/30"></div>
              <div class="text-center">
                <div class="text-2xl font-bold text-white">40×60</div>
                <div class="text-white/80 text-sm">cm Base</div>
              </div>
            </div>
            <a
              href="/#contact"
              class="btn bg-white text-red-800 hover:bg-neutral-50"
            >
              Get Quote
            </a>
          </div>
          <div class="flex justify-center">
            <Image
              src={trayaEu6000Image}
              alt="TRAYA EU 6000-M Emergency Water Filtration System"
              class="max-w-md w-full h-auto"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Product Features -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Key Features -->
          <div>
            <h2 class="text-3xl font-bold text-neutral-900 mb-8">
              Key Features
            </h2>
            <div class="space-y-4">
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-red-600 rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Ultra Filtration (UF) Membrane Water Filtration
                  </h3>
                  <p class="text-neutral-600">
                    For emergency usage during flood, ground water for shower,
                    cleaning & toilet
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-red-600 rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
                    class="w-3 h-3 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-900">
                    Strong & Reliable PVDF Membrane
                  </h3>
                  <p class="text-neutral-600">
                    Durable construction for emergency conditions
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <div
                  class="w-6 h-6 bg-red-600 rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0"
                >
                  <svg
