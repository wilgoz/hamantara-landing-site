            <!-- Emergency Applications -->
            <div class="mt-8">
              <h3 class="text-xl font-bold text-neutral-900 mb-4">
                Emergency Applications
              </h3>
              <div class="grid grid-cols-2 gap-4">
                <div
                  class="bg-red-50 border border-red-200 rounded-lg p-4 text-center"
                >
                  <div class="font-bold text-red-800">Flood Relief</div>
                  <div class="text-sm text-red-600">Emergency Water</div>
                </div>
                <div
                  class="bg-red-50 border border-red-200 rounded-lg p-4 text-center"
                >
                  <div class="font-bold text-red-800">Disaster Areas</div>
                  <div class="text-sm text-red-600">Quick Deployment</div>
                </div>
                <div
                  class="bg-red-50 border border-red-200 rounded-lg p-4 text-center"
                >
                  <div class="font-bold text-red-800">Remote Locations</div>
                  <div class="text-sm text-red-600">Off-Grid Use</div>
                </div>
                <div
                  class="bg-red-50 border border-red-200 rounded-lg p-4 text-center"
                >
                  <div class="font-bold text-red-800">Relief Camps</div>
                  <div class="text-sm text-red-600">High Capacity</div>
                </div>
              </div>
            </div>

            <!-- Certifications -->
            <div class="mt-8">
              <h3 class="text-xl font-bold text-neutral-900 mb-4">
                Certifications
              </h3>
              <div class="flex space-x-4">
                <div
                  class="bg-white border border-neutral-200 rounded-lg p-4 text-center"
